<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <layer-list>
            <!--shadow-->
            <item android:top="0dp">
                <shape>
                    <solid android:color="@color/grey_300" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <!--background-->
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/twitter_dark" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@color/primary_dark" android:state_focused="true" />

    <item>
        <layer-list>
            <!--shadow-->
            <item android:top="1dp">
                <shape>
                    <solid android:color="@color/grey_300" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <!--background-->
            <item android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/twitter" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>